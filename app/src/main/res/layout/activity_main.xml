<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gifo.testapplication.MainActivity">


    <TextView
        android:id="@+id/grund_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="QUANTITY"
        android:textSize="20sp"
        android:textColor="#CCFFFFFF" />


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grund_txt"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/but_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20sp"
            android:onClick="onClickButton" />

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="1"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20sp"
            android:onClick="onClickButton" />
    </LinearLayout>


    <TextView
        android:id="@+id/grund_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/linear"
        android:text="PRICE"
        android:textSize="20sp"
        android:textColor="#CCFFFFFF" />


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/grund_txt_2"
        android:text="$5"
        android:textSize="23sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/but_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_marginLeft="12dp"
        android:text="ORDER"
        android:textSize="16sp"
        android:onClick="onClickButton" />


    <TextView
        android:id="@+id/vendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:text="\@mr_gifo"
        android:textSize="16sp"
        android:textColor="#88000000"
        android:textStyle="italic" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_above="@id/vendor"
        android:background="#55000000" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fone"
        android:scaleType="centerCrop"
        android:translationZ="-1dp" />
</RelativeLayout>