<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gifo.testapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme" >

        <!-- Все активити обязательно должны быть перечислены в манифесте
             в том числе активити не только нашего приложения,
             но и которые планируем запускать извне -->
        <activity android:name=".MainActivity" >

            <!-- Так обозначается главный активити, которая открывается при старте на раб. столе-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".SettingsActivity"
            android:label="@string/button_set">
        </activity>

    </application>

</manifest>